<UserControl x:Class="PointOfSale.Screens.OrderInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" TextAlignment="Center" FontSize="20">Order #100</TextBlock>
        <TextBlock DockPanel.Dock="Bottom" TextAlignment="Center" FontSize="20">Total: $18.25</TextBlock>
        <TextBlock DockPanel.Dock="Bottom" TextAlignment="Center" FontSize="20">Tax: $0.67</TextBlock>
        <TextBlock DockPanel.Dock="Bottom" TextAlignment="Center" FontSize="20">Subtotal: $17.78</TextBlock>

        <ListView Name ="orderedItems" FontSize="15"></ListView>
    </DockPanel>
</UserControl>
