<u:CustomizationScreen x:Class="PointOfSale.Screens.Menus.Entrees.GardenOrcOmeletteCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Screens.Menus.Entrees"
             xmlns:u="clr-namespace:PointOfSale.Screens.Menus"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="CheckBox">
                <Setter Property="LayoutTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="2" ScaleY="2"></ScaleTransform>
                    </Setter.Value>
                </Setter>
                <Setter Property="Margin" Value="4"></Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <WrapPanel Background="White" Orientation="Vertical">
        <CheckBox IsChecked="{Binding Path=Broccoli}">Broccoli</CheckBox>
        <CheckBox IsChecked="{Binding Path=Mushrooms}">Mushrooms</CheckBox>
        <CheckBox IsChecked="{Binding Path=Tomato}">Tomato</CheckBox>
        <CheckBox IsChecked="{Binding Path=Cheddar}">Cheddar</CheckBox>
    </WrapPanel>
</u:CustomizationScreen>
