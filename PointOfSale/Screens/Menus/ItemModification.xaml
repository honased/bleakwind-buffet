<UserControl x:Class="PointOfSale.Screens.Menus.ItemModification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Screens.Menus"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Name="customizeItemLabel" TextAlignment="Center" FontSize="25" FontWeight="Bold">Customize Briarheart Burger</TextBlock>

        <Button DockPanel.Dock="Bottom" FontSize="20" Margin="10" MaxWidth="250" Click="FinishClicked">Finish</Button>
        
        <Border Name="customizationContainer" BorderBrush="Silver" BorderThickness="1" CornerRadius="8" Margin="5">
        </Border>
    </DockPanel>
</UserControl>
